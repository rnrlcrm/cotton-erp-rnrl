# GCP Sandbox Environment Configuration
# Project: commodity-plafform-sandbox

# Project settings
PROJECT_ID="commodity-plafform-sandbox"
PROJECT_NUMBER=""  # Will be auto-populated
REGION="us-central1"
ZONE="us-central1-a"

# Environment
ENVIRONMENT="sandbox"

# Cloud SQL
DB_INSTANCE_NAME="cotton-erp-db"
DB_VERSION="POSTGRES_15"
DB_TIER="db-f1-micro"
DB_NAME="commodity_erp"
DB_USER="commodity_user"

# Redis
REDIS_INSTANCE_NAME="cotton-erp-redis"
REDIS_SIZE="1"
REDIS_TIER="basic"

# VPC
VPC_CONNECTOR_NAME="cotton-erp-connector"
VPC_CONNECTOR_RANGE="10.8.0.0/28"

# Artifact Registry
ARTIFACT_REPO_NAME="cotton-erp"
ARTIFACT_REPO_LOCATION="us-central1"

# Cloud Run Services
BACKEND_SERVICE_NAME="backend-service"
BACKEND_CPU="2"
BACKEND_MEMORY="4Gi"
BACKEND_MIN_INSTANCES="0"
BACKEND_MAX_INSTANCES="3"
BACKEND_CONCURRENCY="80"

FRONTEND_SERVICE_NAME="frontend-service"
FRONTEND_CPU="1"
FRONTEND_MEMORY="512Mi"
FRONTEND_MIN_INSTANCES="0"
FRONTEND_MAX_INSTANCES="2"

# Storage Buckets
UPLOADS_BUCKET="${PROJECT_ID}-uploads"
ML_MODELS_BUCKET="${PROJECT_ID}-ml-models"

# Pub/Sub Topics
PUBSUB_TOPICS=(
  "trade-events"
  "risk-events"
  "payment-events"
  "notification-events"
  "audit-events"
)

# Service Accounts
BACKEND_SA_NAME="backend-runtime"
CI_CD_SA_NAME="ci-cd-deployer"

# Secrets (names only, values set separately)
SECRETS=(
  "database-url"
  "redis-url"
  "jwt-secret"
  "openai-key"
  "anthropic-key"
  "twilio-auth-token"
  "stripe-secret-key"
  "razorpay-secret-key"
)

# Budget alert
BUDGET_AMOUNT="100"
BUDGET_CURRENCY="USD"
