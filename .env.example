# Application
APP_NAME=Cotton ERP
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://cotton_user:cotton_password@localhost:5432/cotton_erp
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://cotton_user:cotton_password@localhost:5672/
RABBITMQ_MANAGEMENT_URL=http://localhost:15672

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@cottonerp.com

# SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateways
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cotton-erp-storage

GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=cotton-erp-storage
GCS_CREDENTIALS_PATH=./config/secrets/gcs-credentials.json

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# External APIs
GST_API_URL=https://api.gst.gov.in
GST_API_KEY=your-gst-api-key
CCI_API_URL=https://api.cci.gov.in
CCI_API_KEY=your-cci-api-key

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Mobile
EXPO_PUBLIC_API_URL=http://localhost:8000
